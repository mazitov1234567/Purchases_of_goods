<div class="container" style="max-width: 600px; margin: auto; border: 3px solid #1ab188; padding: 20px; margin-top: 50px;">
  <form action="/submit-order" method="post">
    <div class="input-group mb-3">
      <input type="text" name="productName" class="form-control" placeholder="Название товара" aria-label="Username" aria-describedby="basic-addon1" required>
    </div>
    <div class="form-outline">
      <input type="number" name="quantity" id="typeNumber" placeholder="Количество" class="form-control" required/>
      <label class="form-label" for="typeNumber"></label>
    </div>
    <div class="form-outline" data-mdb-input-init>
      <input type="url" name="url" id="typeURL" placeholder="URL input" class="form-control" required/>
      <label class="form-label" for="typeURL"></label>
    </div>
    <div style="border: 1px solid #ccc; padding: 10px; background-color: #f8f9fa;">
      <div class="input-group mb-3">
        <span class="text">Желаемые сроки</span>
        <input type="date" name="startDate" class="form-control" aria-label="Дата начала" required> 
      </div>
    </div>
    <div style="text-align: center;">
      <button class="btn btn-primary" type="submit" style="background-color: #1ab188; color: white; margin-top: 10px;">Сделать заказ</button>
      
    </div>
  </form>
</div>
